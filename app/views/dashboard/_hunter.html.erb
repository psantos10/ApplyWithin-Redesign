<div class="row h-dashboard">
  <div class="col-lg-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Current Applications</h3>
        <p>This is what you've applied to</p>
      </div>
      <div class="panel-body">
        <%= render partial: 'position_applications/hunter/current_applications_table', object: current_user.group.current_applications %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Auto Apply<%= link_to 'Set-Up Auto Apply', new_hunter_auto_application_path(current_user.group), class:'btn btn-default pull-right' %></h3>
        <p>Lets make it easy</p>
      </div>
      <div class="panel-body">
        <%= render partial: '/auto_applications/auto_applications_table', object: current_user.group.auto_applications %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Past Applications</h4>
        <p>This is your application history</p>
      </div>
      <div class="panel-body">
        <%= render partial: 'position_applications/hunter/past_applications_table', object: current_user.group.past_applications %>
      </div>
    </div>

  </div>
</div>