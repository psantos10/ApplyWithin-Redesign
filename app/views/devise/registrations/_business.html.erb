<div class="panel-heading">
  <h3 id="form-title">Business Sign Up</h3>
</div>

<div class="panel-body">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <%= f.hidden_field :group, :value => "business" %>
      <%= f.button :submit, "Sign up" %>

  <% end %>
  <hr>
  <p style="font-size:.8em;margin-top:20px">By clicking Sign up you are agreeing to our <%= link_to "Privacy Policy", static_pages_privacy_policy_path %> and <%= link_to "Business Terms", static_pages_business_terms_path %>.</p>

</div>