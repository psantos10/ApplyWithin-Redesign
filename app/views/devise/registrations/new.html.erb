<div class="row">
  <div class="col-lg-offset-4 col-lg-4">

    <div class="panel panel-default">
      <%= render partial: 'devise/shared/errors' %>
      <% if request.fullpath.include?('signup_business') %>
      <%= render partial: 'business' %>
      <% elsif request.fullpath.include?('signup_hunter') %>
      <%= render partial: 'hunter' %>
      <% else %>

      <div class="panel-heading">
        <h3 class="panel-title">Account Type?</h3>
      </div>
        <div class="panel-body">
          <div class="col-lg-6">
            <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Do you need to find new staff?">
              <%= button_to('BUSINESS', signup_business_path, class: 'btn circle blue-circle' )%>
            </span>

          </div>
          <div class="col-lg-6">
            <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Are you looking for jobs?">
              <%= button_to('JOB HUNTER', signup_hunter_path, class: 'btn circle orange-circle' )%>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('.has-tooltip').tooltip();
  $('.has-popover').popover({
    trigger: 'hover'
  });
});
</script>