<div class="panel-heading">
  <h3 class="panel-title">Job Hunter Sign Up</h3>
</div>

<div class="panel-body">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <%= f.hidden_field :group, :value => "hunter" %>
      <%= f.button :submit, "Sign up" %>
  <% end %>
  <p>By clicking Sign-up Business you are agreeing to our <%= link_to "Privacy Policy", static_pages_privacy_policy_path %> and <%= link_to "Business Terms", static_pages_business_terms_path %>.</p>
  
</div>
