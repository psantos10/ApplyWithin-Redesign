<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-4 col-lg-4 col-md-6 col-sm-8 col-xs-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Forgot your password</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
              <%= link_to "Resend Confirmation?", new_user_confirmation_path(resource_name), class:"pull-right" %>
          </div>
            <%= f.button :submit, "Send Password Reset" %>
          <hr>
          <p class="pull-right">Not a member yet? <%= link_to "Sign Up", new_registration_path(resource_name) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>