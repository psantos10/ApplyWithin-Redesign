<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-4 col-lg-4 col-md-6 col-sm-8 col-xs-10">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 id="form-title">Sign In</h3>
      </div>

      <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"pull-right" %>
          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>
        </div>
          <%= f.button :submit, "Sign In" %>
        <hr>
        <p class="pull-right">Not a member yet? <%= link_to "Sign Up", new_registration_path(resource_name) %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>