<div class="panel-body">
  <%= f.input :form, :input_html => {:value => 'job'}, as: :hidden %>
  <div class="form-inputs">
    <%= f.input :name, required: true, placeholder: "Business Name" %>
    <%= f.input :business_type, collection: BusinessType.all, required: true, prompt: "Business Type" %>
    <%= f.input :postcode, required: true, placeholder: "Business Postcode" %>
    <div class="pull-right"><span id="body-count">0</span> characters</div>
    <%= f.input :tagline, required: true, placeholder: "Business Tagline", hint: 'Up to 200 characters', input_html: { :id => "body-field" } %>
    <%= f.input :cover_image, as: :file, :input_html => {:onchange => "previewFile()"} %>
    <div style="text-align:center;margin:5px">
      <img height="250" width="80%" style="margin-top:10px;text-align:center" alt="Image preview...">
    </div>
  </div>
  <hr>
  <div class="form-actions" style='text-align:center'>
    <%= f.button :submit, 'Create Business', class: 'btn btn-default' %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $("#body-field").on("keyup", function(){
    var length = $(this).val().length;
    $("#body-count").html(length);
  });
});
</script>