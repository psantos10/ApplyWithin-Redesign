<% if business.email.include?("colinbf") || business.email == nil %>

<% elsif business.name.present? %>

  <h5 style="text-align:center"><%= link_to business.name, business, style:"color:#FF534B;font-weight:600;font-size:1em" %><p style="color:##337ab7;margin-bottom:0px;font-size:.9em;font-weight:600"><%= business.type %> | <%= location(business) %>  </p></h5>
  <% if business.cover_image.present? %>
    <a><%= image_tag business.cover_image, style:"height:100px;width:150px;border-radius:4px;box-shadow: 4px 2px 2px #AAAAAA;text-align:center;margin-left:30px" %></a>
  <% else %>
    <a><%= image_tag ("wall.jpg"), style:"height:100px;width:150px;border-radius:4px;box-shadow: 4px 2px 2px #AAAAAA;text-align:center;margin-left:30px;" %></a>
  <% end %>  

<% end %>
