<div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag positions_path, class: '', :method => :get do %>

        <div class="row">
          <% JobBracket.all.each do |a| %>
          <div class="col-md-3 col-sm-6 col-xs-6" style="text-align:left">
            <%= check_box_tag("#{a.name.downcase.split.first}", a.id, params["#{a.name.downcase.split.first}"] )%>
            -
            <%= a.name %>
          </div>
          <% end %>
        </div>

        <hr style="margin:10px">
        <div class="row">
        <div class="form-group col-md-11 hidden-xs">
          <%= text_field_tag :q, params[:q], placeholder: "What?", class:"form-control", style:"width:40%;display:inline"  %>
          <%= text_field_tag :location, params[:location], placeholder: "Where?", class:"form-control", style:"width:30%;display:inline" %>
          <%= select_tag(:miles, options_for_select([1,2.5,5,10,15,20], 5), options = {class:'form-control', style:"width:50px;display:inline"}) %><label style="margin-left:10px">miles</label>
        </div>
        <%= button_tag(class: 'btn btn-success btn-circle btn-lg', style:"display:block;margin-left:auto;margin-right:auto") do %><span class="glyphicon glyphicon-search" aria-hidden="true"></span><% end %>
        <% end %>
        </div>
      </div>
    </div>

</div>
