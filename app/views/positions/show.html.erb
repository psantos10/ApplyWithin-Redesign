<% content_for :head do %>
  <meta name="twitter:title" content="<%= @position.title %>" />
  <meta name="twitter:description" content="<%= @position.tagline %>" />
  <meta name="twitter:image" content="<%= @position.business.cover_image.url(:large) %>" />
  <meta name="twitter:card" content="summary_large_image" />
<% end %>


<div class="row">
  <div class="cover_image" style="background-image: url(<%= @position.business.cover_image_profile %>)">
    <div class="container">
      <div class="row">
        <%= render partial: "positions/page/position_info", locals: { position: @position } %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="position_show">
    <div class="panel panel-default">
      <div class="addthis_sharing_toolbox pull-right" style="margin:10px"></div>
      <div class="panel-body">
        <h1><%= @position.title %></h1>
        <h4><%= link_to @position.business do %><%= @position.business.name %> | <%= @position.business.type %> | <%= LondonArea.find_by(postcode: @position.business.postcode[/(\S+)/, 1]).name %><% end %></h4>
        <p><%= @position.tagline %></p>
        <hr>
        <% if @position.business.owner?(current_user)  %>
          <%= link_to edit_detail_position_path(@position), class:'btn btn-default pull-right' do %>
          <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Edit Job Details">
            <i class="fa fa-pencil-square-o"></i>
          </span>
          <% end %>
        <% end %>

        <%= render partial: 'positions/page/position_details', locals: { position: @position }%>
        <hr>
        <%= render partial: 'positions/page/position_description', locals: { position: @position }%>

        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
          <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="back">
            <%= link_to :back, class:'btn btn-info btn-circle btn-lg pull-left', style:'padding-top:12px' do %>
              <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <% end %>
          </span>
          <div class="pull-right" style="font-size:1.3em">
            <% if @position.is_this_job_open %>
            <td style="text-align:center"><%= render partial: 'position_advertisements/apply', locals: { position_advertisement: @position.current_advertisement } %></td>
            <% else %>
            <td style="text-align:center">
            <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Unavailable">
              <%= button_to root_path,  class:"btn btn-warning btn-circle btn-lg", :disabled => true do %>
                <i class="fa fa-times" aria-hidden="true"></i>
              <% end %>
            </span>
            </td>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>