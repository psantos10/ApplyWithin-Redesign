  <% if position.business.name.present? %>

  <h5 style="text-align:center;"><%= link_to position.title, position, style:"color:#FF534B;font-weight:600;font-size:1em" %><p style="color:#021542;margin-bottom:0px;font-size:.8em"><%= position.business.type %> | <%= LondonArea.find_by(postcode: position.business.postcode[/(\S+)/, 1]).name %></p></h5>

  <% if position.business.cover_image.present? %>
  
  <a><%= image_tag position.business.cover_image, style:"height:150px;width:100px;border-radius:4px;margin-left:30px;margin-right:30px;box-shadow: 2px 1px 1px 1px #AAAAAA" %></a>
  
  <% else %>
  <a><%= image_tag ("wall.jpg"), style:"border-radius:4px;height:75px;width:75px" %></a>
  <% end %> 


<% end %>