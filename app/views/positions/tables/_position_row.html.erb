<tr data-toggle="collapse" data-target=".<%= position_row.id %>"  onclick="" >
  <td><%= position_row.title %></td>
  <td><%= JobCategory.find(position_row.category).name %></td>
  <td ><%= position_row.start_date %></td>
  <td><%= WeeklyHour.find(position_row.weekly_hours).name %></td>
  <td><%= position_row.openings %></td>
  <!-- <td><%= advertisement_or_position_date(position_row) %> ago</td> -->
  <td style="text-align:center;font-size:.9em"><%= link_to 'view', position_path(position_row), class:'label label-primary', style:'border-radius:4px;color:white;font-size:1em;font-weight:600;margin-top:10px' %></td>
  <% if position_row.is_this_job_open %>
  <td style="text-align:center;font-size:.9em"><%= render partial: 'position_advertisements/apply', locals: { position_advertisement: position_row.current_advertisement } %></td>
  <% else %>
  <td style="text-align:center;font-size:.9em"><%= link_to "unavailable", nil, class: "label label-warning", :disabled => true, style:'border-radius:4px;color:white;font-size:1em;font-weight:600;margin-top:10px' %></td>
  <% end %>
</tr>

<tr class="collapse <%= position_row.id %>">
  <td colspan="100%" style="background-color:#f5f5f5"><%= position_row.tagline %></td>
</tr>