<tr data-toggle="collapse" data-target=".<%= position_row.id %>"  onclick="" style="font-size:1.1em;">

  <td style="vertical-align:middle;"><%= position_row.title %></td>
  <td class="hidden-xs" style="vertical-align:middle;"><%= JobCategory.find(position_row.category).name %></td>
  <td class="hidden-xs" style="vertical-align:middle;"><%= position_row.start_date %></td>
  <td class="hidden-xs" style="vertical-align:middle;"> <%= WeeklyHour.find(position_row.weekly_hours).name %></td>
  <td style="text-align:center;font-size:.9em">
    <%= link_to position_path(position_row), class:'btn btn-primary btn-circle btn-xl', style:'padding-top:20px' do %>
    <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="view">
      <i class="fa fa-binoculars fa-2x" aria-hidden="true"></i>
    </span>
    <% end %>

  </td>

  <% if position_row.is_this_job_open %>
  <td style="text-align:center;font-size:.9em"><%= render partial: 'position_advertisements/apply', locals: { position_advertisement: position_row.current_advertisement } %></td>
  <% else %>
  <td style="text-align:center;font-size:.9em">
    <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="unavailable">
      <%= button_to root_path,  class:"btn btn-danger btn-circle btn-xl", :disabled => true do %>
        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
      <% end %>
    </span>
  </td>
  <% end %>
</tr>

<tr class="collapse <%= position_row.id %>">
  <td colspan="100%" style="background-color:#f5f5f5"><%= position_row.tagline %></td>
</tr>