<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12" id="position_detail">
      <div class="col-lg-3 col-md-3">
       <p><span id="bold"><%= JobCategory.find(@position.category).name %>&nbsp;&nbsp;(&nbsp;<%= WeeklyHour.find(@position.weekly_hours).name %>&nbsp;p/w&nbsp;)</span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
        <p><span id="bold"><%= JobWage.find(@position.wage).name %>&nbsp;&nbsp;&nbsp;p/h</span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
        <p>Start &nbsp;&nbsp;&nbsp;<span id="bold"><%= @position.start_date %></span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
        <p>Opening &nbsp;&nbsp;&nbsp;<span id="bold"><%= @position.openings %></span></p>
      </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12" id="position_detail">
      <div class="col-lg-3 col-md-3" >
        <p>Dress Code&nbsp;&nbsp;&nbsp;<span id="bold"><%= @position.dress_code %></span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
       <p>Customer Facing&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span id="bold"><%= ticks_or_crosses(@position.customer_facing) %></span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
       <p>Over 18&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span id="bold"><%= ticks_or_crosses(@position.age_restricted) %></span></p>
      </div>

      <div class="col-lg-3 col-md-3" >
       <p>Tips&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span id="bold"><%= ticks_or_crosses(@position.tips) %></span></p>
      </div>  
    </div>
  </div>
</div>
