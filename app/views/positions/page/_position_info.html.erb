<div class="panel panel-default col-xs-offset-1 col-sm-offset-0 col-md-offset-0 col-lg-offset-3 col-lg-6 col-md-8 col-sm-8 col-xs-10" id="position_info">
  <div class="panel-body" style="text-align:center">
    <!-- <p class="pull-right"style="color:white"><%= advertisement_or_position_date(@position) %> ago</p> -->
    <h3 style="margin-top:10px"><%= @position.title %></h3>
    <h4><%= link_to @position.business.name, @position.business, class: "pinky" %></h4>
    <div class="col-lg-12 col-md-12 col-sm-12" id="info-row" >
      <h5><%= JobCategory.find(@position.category).name %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= @position.type %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= @position.business.type %></h5>
    </div>
    <p><%= @position.tagline %></p>

    <% if @position.business.owner?(current_user)  %>
      <%= link_to edit_info_position_path(@position), class:'btn btn-default pull-left' do %>
      <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Edit Job Info">
        <i class="fa fa-pencil-square-o"></i>
      </span>
      <% end %>
    <% end %>
  <div class="addthis_sharing_toolbox" style="margin-top:10px"></div>
  <%= link_to :back, class:'btn btn-info btn-circle btn-lg pull-right', style:'border:0px;padding-top:12px;background-color:#337AB7' do %>
    <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="back">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
  <% end %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('.has-tooltip').tooltip();
  $('.has-popover').popover({
    trigger: 'hover'
  });
});
</script>