<div class="panel panel-default col-xs-offset-1 col-sm-offset-0 col-md-offset-0 col-lg-offset-0  col-lg-6 col-md-8 col-sm-8 col-xs-8" id="position_info">
  <div class="panel-body">
    <p class="pull-right"style="color:white"><%= advertisement_or_position_date(@position) %> ago</p>
    <h2><%= @position.title %>    
    </h2>
    <h3><%= link_to @position.business.name, @position.business, class: "pinky" %></h3>
    <div class="col-lg-12 col-md-12 col-sm-12" id="info-row" >
      <h4><%= JobCategory.find(@position.category).name %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= @position.type %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= @position.business.type %></h4>
    </div>
    <p><%= @position.tagline %></p>

    <% if @position.business.owner?(current_user)  %>
      <%= link_to edit_info_position_path(@position), class:'btn btn-default pull-left' do %>
      <span class="has-tooltip" data-toggle="tooltip" data-placement="bottom" title="Edit Job Info">
        <i class="fa fa-pencil-square-o"></i>
      </span>
      <% end %>
    <% end %>

  <div class="addthis_sharing_toolbox pull-right" style="margin-top:10px"></div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('.has-tooltip').tooltip();
  $('.has-popover').popover({
    trigger: 'hover'
  });
});
</script>