<div class="row">
  <div class="col-lg-6" style="font-size:.7em;text-align:left">
    <h5><%= search_result_info @positions %></h5>
  </div>
  <div class="col-lg-6" style="font-size:.7em;text-align:right">
    <%= will_paginate @positions, renderer: BootstrapPagination::Rails %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <hr style="margin:10px;margin-top:0px">
    <% @positions.each do |position| %>
      <div class="col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <%= render partial: 'positions/position', locals: {position: position} %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <hr>
  <div class="col-lg-12" style="font-size:.7em;text-align:right">
    <%= will_paginate @positions, renderer: BootstrapPagination::Rails %>
  </div>
</div>
