<div class="container" style="margin-top:-20px">

<%= render '/positions/search' %>

<div class="collapse collapse in" id="collapseExample">
  <div class="panel-body">
    <div class="col-lg-offset-1 col-lg-10">
      <div id="map" class="map" style='width:100%;height:300px;'></div>
    </div>
  </div>
</div>

<button class="btn btn-default pull-right" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  Map
</button>

    <h5>Results:&nbsp;<%= @positions.count %> <%= params[:q] %> <%= params[:location] %></h5>
    <%= will_paginate @positions, :page_links => true, style:"margin:0px" %>
    <hr>
  <div class="row">
    <% @positions.each do |position| %>
      <% if position.business.email == nil %>
      <% elsif position.business.name.present? %>
        <div class="col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <%= render partial: 'positions/position', locals: {position: position} %>
        </div>
      <% end %>
    <% end %>
    <%= will_paginate @positions, :page_links => true, style:"margin:0px", class:"pull-right" %>
  </div>

</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ 
  	provider: { mapTypeId: google.maps.MapTypeId.ROADMAP, maxZoom: 16 }, 
  	internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>