<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-2 col-lg-offset-2 col-lg-8 col-md-8 col-sm-10 col-xs-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 id="form-title">Edit Profile
          <%= link_to 'back', :back, class:'pull-right', style:'padding-top:5px;font-size:.8em' %>
        </h3>
      </div>
      <%= simple_form_for(@hunter) do |f| %>
        <%= render partial: 'form_profile', locals: {f: f} %>
      <% end %>
    </div>
  </div>
</div>

<% if !@hunter.source.present? %>
  <%= render partial: 'sign_up_feedback_modal' %>
<% end %>
