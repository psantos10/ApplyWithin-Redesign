<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 col-lg-6 col-md-6 col-sm-8 col-xs-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 id="form-title">New Language</h3>
      </div>
      <%= simple_form_for([@hunter, @language]) do |f| %>
        <%= render partial: '/languages/form', locals: {f: f} %>
      <% end %>
      <%= link_to 'Cancel', dashboard_path, class: "btn btn-default center-block" %>
    </div>
  </div>
</div>
